{
  "name": "bring_userscript_to_via",
  "version": "1.0.0-rc.3",
  "description": "将 UserScript/油猴脚本 带到Via浏览器",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Xmader/Bring_UserScript_to_Via.git"
  },
  "author": "Xmader",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Xmader/Bring_UserScript_to_Via/issues"
  },
  "homepage": "https://github.com/Xmader/Bring_UserScript_to_Via#readme",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "http-server": "Xmader/http-server",
    "rollup": "^0.66.5",
    "rollup-plugin-babel": "^4.0.3"
  },
  "scripts": {
    "dev": "http-server --cors -p 8083 -c-1 -s",
